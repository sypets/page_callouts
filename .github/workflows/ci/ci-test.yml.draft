name: CI

on:
  push:
  pull_request:

jobs:

  testsuite:
    name: CI (multiple versions)
    runs-on: ubuntu-20.04
    strategy:
      matrix:
        php: [ '7.4', '8.0', '8.1', '8.2'  ]
        minMax: [ 'composerInstallMin', 'composerInstallMax' ]
    steps:
      - name: Checkout
        uses: actions/checkout@v2

      - name: Composer
        run: Build/Scripts/runTests.sh -p ${{ matrix.php }} -s ${{ matrix.minMax }}

